<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='coreRes' type='org.eclipse.che.ide.Resources'/>
    <ui:style  src="org/eclipse/che/ide/api/ui/style.css">
        .emptyBorder {
            margin: 6px;
        }

        .outputText {
            white-space: pre;
            background: textFieldBackgroundColor;
            font-family: outputFontFamily;
            font-size: consoleFontSize;
            line-height: consoleLineHeight;
        }

        .inputText {
            background: textFieldBackgroundColor;
        }
    </ui:style>
        <g:FlowPanel addStyleNames="{style.emptyBorder}">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:south size="28">
                    <g:TextBox width="100%" ui:field="inputText" debugId="debug-console-input-text" addStyleNames="{style.inputText}"/>
                </g:south>
                <g:center>
                    <g:FlowPanel ui:field="outputPanel">
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:FlowPanel>
</ui:UiBinder>
